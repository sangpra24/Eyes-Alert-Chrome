{
  "manifest_version": 3,
  "name": "แจ้งเตือนการพักสายตา 20-20-20",
  "description": "ส่วนขยายของ Chrome เพื่อเตือนให้คุณพักสายตา",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rest Your Eyes"
  },
  "permissions": [
    "alarms",
    "activeTab",
    "notifications",
    "storage",
    "tabs",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}
